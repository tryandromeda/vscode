{
  "name": "andromeda-runtime-vscode",
  "displayName": "Andromeda Language Server",
  "description": "Enhanced JavaScript and TypeScript support with the Andromeda Language Server - featuring advanced linting, auto-completion, formatting, and code actions",
  "version": "0.1.2",
  "publisher": "Andromeda",
  "license": "MPL-2.0",
  "homepage": "https://github.com/tryandromeda/andromeda",
  "repository": {
    "type": "git",
    "url": "https://github.com/tryandromeda/vscode.git"
  },
  "bugs": {
    "url": "https://github.com/tryandromeda/andromeda/issues"
  },
  "engines": {
    "vscode": "^1.102.3"
  },
  "icon": "assets/andromeda.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "categories": [
    "Programming Languages",
    "Linters", 
    "Formatters",
    "Other"
  ],
  "keywords": [
    "javascript",
    "typescript",
    "linting",
    "language-server",
    "andromeda",
    "auto-completion",
    "code-actions",
    "formatting",
    "diagnostics",
    "hover",
    "web-apis",
    "canvas",
    "crypto"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "javascript",
        "extensions": [".js", ".jsx", ".mjs", ".cjs"]
      },
      {
        "id": "typescript",
        "extensions": [".ts", ".tsx"]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Andromeda",
      "properties": {
        "andromeda.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Andromeda language server"
        },
        "andromeda.run": {
          "type": "string",
          "enum": ["onType", "onSave", "never"],
          "default": "onType",
          "description": "When to run diagnostics"
        },
        "andromeda.configPath": {
          "type": "string",
          "default": null,
          "description": "Path to Andromeda configuration file"
        },
        "andromeda.unusedDisableDirectives": {
          "type": "string",
          "enum": ["allow", "warn", "error"],
          "default": "allow",
          "description": "How to handle unused disable directives"
        },
        "andromeda.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to the Andromeda executable (defaults to 'andromeda' from system PATH)"
        },
        "andromeda.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        },
        "andromeda.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable code formatting"
        },
        "andromeda.codeAction.autoFix.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-fix code actions"
        },
        "andromeda.completion.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable enhanced completions for Andromeda APIs"
        },
        "andromeda.hover.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover information and documentation"
        }
      }
    },
    "commands": [
      {
        "command": "andromeda.restart",
        "title": "Restart Andromeda Language Server",
        "category": "Andromeda"
      },
      {
        "command": "andromeda.showOutput",
        "title": "Show Andromeda Output",
        "category": "Andromeda"
      },
      {
        "command": "andromeda.client.applyAutoFix",
        "title": "Apply Auto Fix",
        "category": "Andromeda"
      },
      {
        "command": "andromeda.client.fixAll",
        "title": "Fix All Auto-fixable Problems",
        "category": "Andromeda"
      },
      {
        "command": "andromeda.format",
        "title": "Format Document",
        "category": "Andromeda"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "andromeda.restart"
        },
        {
          "command": "andromeda.showOutput"
        },
        {
          "command": "andromeda.client.applyAutoFix",
          "when": "editorLangId =~ /^(javascript|typescript)$/"
        },
        {
          "command": "andromeda.client.fixAll",
          "when": "editorLangId =~ /^(javascript|typescript)$/"
        },
        {
          "command": "andromeda.format",
          "when": "editorLangId =~ /^(javascript|typescript)$/"
        }
      ],
      "editor/context": [
        {
          "command": "andromeda.client.applyAutoFix",
          "when": "andromeda.enabled && editorLangId =~ /^(javascript|typescript)$/ && resourceExtname =~ /\\.(js|jsx|ts|tsx|mjs|cjs)$/",
          "group": "1_modification@1"
        },
        {
          "command": "andromeda.client.fixAll",
          "when": "andromeda.enabled && editorLangId =~ /^(javascript|typescript)$/ && resourceExtname =~ /\\.(js|jsx|ts|tsx|mjs|cjs)$/",
          "group": "1_modification@2"
        }
      ]
    }
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onCommand:andromeda.restart",
    "onCommand:andromeda.showOutput",
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish",
    "pretest": "npm run compile",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/node": "24.2.0",
    "typescript": "^5.9.2",
    "@vscode/vsce": "^3.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
